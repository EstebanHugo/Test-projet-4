<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/tsujet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sujet">

    </TextView>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/sujet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:inputType="text"
        >

    </androidx.appcompat.widget.AppCompatEditText>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/theure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heure"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            >

        </TextView>
        <TextView
            android:id="@+id/heure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:inputType="text"
            tools:text="16 janvier 14H30"
            android:layout_margin="8dp"
            android:padding="16dp"
            >

        </TextView>
         <Button
             android:id="@+id/sethourbutton"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_margin="8dp"
             android:text="@string/definir"
             >

         </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tlieu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lieu">

        </TextView>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/lieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:inputType="text"
            >

        </androidx.appcompat.widget.AppCompatEditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tparticipant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Participant">

        </TextView>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/participant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:inputType="text"
            >

        </androidx.appcompat.widget.AppCompatEditText>


    </LinearLayout>
    <TextView
        android:id="@+id/maillist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        tools:text="hugo@hotmail.fr / hugo@hotmail.fr / hugo@hotmail.fr / hugo@hotmail.fr / hugo@hotmail.fr / "
        >

    </TextView>
    <Button
    android:id="@+id/addparticipantbutton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/add"
        android:layout_gravity="center_horizontal"
    >

</Button>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/boutonvalide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="16dp"
        android:clickable="true"
        app:backgroundTint="#00acc1"
        app:srcCompat="@drawable/ic_baseline_check_24" />


</LinearLayout>
